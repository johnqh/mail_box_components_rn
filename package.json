{
  "name": "@sudobility/components-rn",
  "version": "1.0.10",
  "description": "React Native UI components and design system - Ported from @sudobility/components",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:packages": "bun run build --workspaces --if-present",
    "build:all": "bun run build && bun run build:packages",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "react-native",
    "components",
    "ui",
    "design-system",
    "typescript",
    "nativewind",
    "tailwind"
  ],
  "author": "Sudobility",
  "peerDependencies": {
    "@sudobility/design": "^1.1.16",
    "nativewind": ">=4.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.72.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=3.0.0",
    "react-native-safe-area-context": ">=4.0.0",
    "react-native-svg": ">=13.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@sudobility/design": "^1.1.16",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.3.0",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "ajv": "^8.17.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nativewind": "^4.1.0",
    "prettier": "^3.4.0",
    "react": "^18.3.0",
    "react-native": "^0.76.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sudobility/components-rn.git"
  },
  "bugs": {
    "url": "https://github.com/sudobility/components-rn/issues"
  },
  "homepage": "https://github.com/sudobility/components-rn#readme",
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
